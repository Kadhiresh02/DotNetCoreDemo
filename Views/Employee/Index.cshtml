@model IEnumerable<Employee>
<h1 class="bg-info text-white">Employee List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Employee</a>
<table class="table table-sm table-bordered">
	<tr>
		<th>Id</th>
		<th>Name</th>
		
		<th>Designation</th>
		<th>DepartmentId</th>
		<th>Department</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	@foreach (Employee infor in Model)
	{
		<tr>
			<td>@infor.Id</td>
			<td>@infor.Name</td>
			
			<td>@infor.Designation</td>
			<td>@infor.DepartmentId</td>

			<td>@infor.Department.Name</td>
			<td>
				<a class="btn btn-sm btn-primary" asp-action="Update"
				   asp-route-id="@infor.Id">Update</a>
			</td>
			<td>
				<form asp-action="Delete" asp-route-id="@infor.Id" method="post">
					<button type="submit" class="btn btn-sm btn-success">Delete</button>
				</form>
			</td>
		</tr>
	}
</table>
